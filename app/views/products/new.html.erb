<h3>Add New Product</h3>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <br>
  <%= f.submit %>
<% end %>
